<div style="min-height: 3rem;"></div>
<div   role="dialog">
  <div class="modal-dialog modal-lg" role="content">
      <div class="modal-content">
          <div class="modal-header">
              <h4 class="modal-title">SignUp</h4>
          </div>
          <div class="modal-body">
            <form>
              <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="text" class="form-control" name="email" required >
                <div class="email error"></div>
                
              </div>


              <button style="background-color:#582bbb; border-color: #582bbb;"  type="submit" class="btn btn-primary btn-md">&nbsp;Verify&nbsp;</button>
            </form>
          </div>
      </div>
  </div>
</div>


<%- include('partials/footer'); -%>

<script>
  const form = document.querySelector('form');
  const emailError = document.querySelector('.email.error');
  // const passwordError = document.querySelector('.password.error');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // reset errors
    emailError.textContent = '';
    // passwordError.textContent = '';

    // get values
    const email = form.email.value;
    // const password = form.password.value;

    try {
      const res = await fetch('/verify', { 
        method: 'POST', 
        body: JSON.stringify({ email}),
        headers: {'Content-Type': 'application/json'}
      });
      const data = await res.json();
      console.log(data);
      if (data.error) {
        emailError.textContent = data.error;
        // passwordError.textContent = data.errors.password;
      }
      if (data.message) {
        emailError.innerHTML = '<p style="color:green;" >'+data.message+'</p>';
      }

    }
    catch (err) {
      console.log(err);
    }

  });
</script>