<%- include('partials/header'); -%>



<div style="min-height: 3rem;"></div>
<div   role="dialog">
  <div class="modal-dialog modal-lg" role="content">
      <div class="modal-content">
          <div class="modal-header">
              <h4 class="modal-title">Reset Password</h4>
              
          </div>
          <div class="modal-body">
            <form>
              <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="text" class="form-control" name="email" required >
                <div class="email message"></div>
                
              </div>


              
              
              <button  style="background-color:#582bbb; border-color: #582bbb;"  type="submit" class="btn btn-primary btn-md">&nbsp;Reset Password&nbsp;</button>
              <div id="emailReset"></div>
            </form>
          </div>
      </div>
  </div>
</div>
<%- include('partials/footer'); -%>
<script>
    const form = document.querySelector('form');
    const emailMessage = document.querySelector('.email.message');
    const ResetPassword = document.querySelector('#emailReset');
    
    form.addEventListener('submit', async (e) => {
        e.preventDefault();

        // reset errors
        emailMessage.textContent = '';
      

        // get values
        const email = form.email.value;
        try {
            const res = await fetch('/forgot-password', {
                method: 'PUT',
                body: JSON.stringify({ email}),
                headers: { 'Content-Type': 'application/json' }
            });
            const data = await res.json();
            console.log('here is the data that i am printing on the client side ',data.message);
           
            if (data.message) {
                emailMessage.textContent = data.message;
                
            }
            if (data.error) {
                emailMessage.innerHTML = '<p style="color:#ff0099;" >'+data.error+'</p>';
              
            }
           

        }
        catch (err) {
            console.log(err);
        }
    });
</script>

